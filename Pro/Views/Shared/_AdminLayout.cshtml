    <script>
        $(document).ready(function () {
            var url = window.location;
            var element = $('#sidebar .menu-item').filter(function () {


                return this.href == url || url.href.indexOf(this.href) == 0;

            }).parent().addClass('active');
            if (element.is('li')) {

                element.parent().parent().addClass('open');

            }



        });
    </script>

